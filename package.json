{
  "name": "cardapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern event-driven card game application for couples",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
  "lint": "eslint .",
  "lint:ci": "eslint . --max-warnings 0",
  "lint:changed": "eslint . --cache --cache-location .eslintcache",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "coverage:badge": "npm run test:unit:coverage && node scripts/update-coverage-badge.mjs",
    "coverage:summary": "node scripts/coverage-summary.mjs",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
  "test:e2e:clean": "rm -rf playwright-report && playwright test --reporter=list",
  "test:integration": "node scripts/run-integration-tests.mjs",
  "test:e2e:smoke": "playwright test tests/e2e/join-approve.spec.js tests/e2e/reconnect-flow.spec.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
  "@mui/icons-material": "^7.3.3",
  "@mui/material": "^7.3.3",
    "fabric": "^6.7.1",
  "react": "^18.3.1",
  "react-dom": "^18.3.1",
    "wait-on": "^8.0.5"
  },
  "devDependencies": {
  "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
  "@types/react": "^18.3.25",
  "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
  "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.0",
  "eslint-plugin-react-hooks": "^5.2.0",
  "eslint-plugin-react-refresh": "^0.4.23",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.41",
  "tailwindcss": "^3.4.18",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reportsDirectory": "coverage",
      "reporter": [
        [
          "text",
          {
            "skipFull": false
          }
        ],
        "lcov",
        "json-summary"
      ]
    }
  },
  "keywords": [
    "react",
    "vite",
    "card-game",
    "couples",
    "event-driven",
    "rabbitmq"
  ],
  "author": "CardApp Team",
  "engines": {
    "node": ">=20.19.0"
  }
}
