{
  "name": "cardapp",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Modern event-driven card game application for couples",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "coverage:badge": "npm run test:unit:coverage && node scripts/update-coverage-badge.mjs",
    "coverage:summary": "node scripts/coverage-summary.mjs",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wait-on": "^8.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.7",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "vitest": {
    "coverage": {
      "provider": "v8",
      "reportsDirectory": "coverage",
      "reporter": [
        [
          "text",
          {
            "skipFull": false
          }
        ],
        "lcov",
        "json-summary"
      ]
    }
  },
  "keywords": [
    "react",
    "vite",
    "card-game",
    "couples",
    "event-driven",
    "rabbitmq"
  ],
  "author": "CardApp Team",
  "engines": {
    "node": ">=20.19.0"
  }
}
